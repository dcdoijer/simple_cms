<% @page_title = "User List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-link') %>

<div class="user list ">
	<h2>Users</h2>

	<%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>
	
	<div><%= pluralize(@users.size, 'user') %> found</div>
	
	<table class="listing" summary="User list">
		<tr class="header">
			<th class="center">Name</th>
			<th class="center">User Name</th>
			<th class="center">email</th>
			<th class="center">Actions</th>
		</tr>
		<% @users.each do |user| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= user.name %></td>
			<td class="center"><%= user.username %></td>
			<td class="center"><%= mail_to(user.email) %></td>
			<td class="actions">
				<%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>