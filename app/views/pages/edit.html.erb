<% @page_title = "Edit Page" %>

<%= link_to("<< Back to list", {:action => 'list', :subject_id => @subject.id}, :class => 'back_link') %>

<div class="page edit">
	<h2>Update Page</h2>

	<%= form_for(:page, :url => {:action => 'update', :subject_id => @subject.id, :id => @page.id}) do |f| %>

		<%= render :partial => "form", :locals => {:f => f } %>

		<div class="form-buttons">
			<%= submit_tag("Update Page") %>
		</div>

	<% end %>
</div>